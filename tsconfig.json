{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist", // or any other output directory you prefer
        "baseUrl": "./",
        "paths": {
            "*": ["./node_modules/*"]
        }
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}
