{
  "name": "backend",
  "version": "0.0.1",
  "description": "An LMS system",
  "main": "app.ts",
  "scripts": {
    "server": "node ./dist/app.js",
    "build": "tsc && npm run copy-templates",
    "dev": "nodemon -L -e ts,json,hbs,js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prettier": "prettier --write \"**/*.ts\"",
    "prettier:check": "prettier --check \"**/*.ts\"",
    "lint": "eslint --ignore-pattern .eslintignore --fix",
    "lint:check": "eslint --ignore-pattern .eslintignore \"**/*.ts\"",
    "build:compile": "npx babel src --extensions .ts --out-dir build --source-maps",
    "build:types": "tsc",
    "generate": "npx prisma generate",
    "push": "npx prisma db push",
    "copy-templates": "copyfiles -u 1 Templates/**/* dist/Templates"
  },
  "keywords": [
    "lms",
    "typescript",
    "prisma",
    "mongodb"
  ],
  "author": "Aditya Choudhury",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.16.1",
    "bcrypt": "^5.1.1",
    "consola": "^3.2.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-device": "^0.4.2",
    "google-auth-library": "9.11.0",
    "handlebars": "^4.7.8",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.14",
    "ua-parser-js": "^1.0.38",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@babel/cli": "7.24.7",
    "@babel/core": "7.24.7",
    "@babel/node": "7.24.7",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-transform-runtime": "7.24.7",
    "@babel/preset-env": "7.24.7",
    "@babel/preset-typescript": "7.24.7",
    "@babel/runtime": "7.24.7",
    "@eslint/js": "^9.6.0",
    "@types/bcrypt": "5.0.2",
    "@types/cookie-parser": "1.4.7",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/jsonwebtoken": "9.0.6",
    "@types/node": "20.14.10",
    "@types/nodemailer": "6.4.15",
    "@types/ua-parser-js": "^0.7.39",
    "@typescript-eslint/eslint-plugin": "7.15.0",
    "@typescript-eslint/parser": "7.15.0",
    "babel-core": "6.26.3",
    "babel-plugin-module-resolver": "5.0.2",
    "babel-plugin-source-map-support": "2.2.0",
    "copyfiles": "2.4.1",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-promise": "6.4.0",
    "globals": "^15.8.0",
    "husky": "^9.0.11",
    "prettier": "3.3.2",
    "prisma": "^5.16.1",
    "ts-node": "10.9.2",
    "typescript": "5.5.3",
    "typescript-eslint": "^7.15.0"
  }
}
